# ===================================
# API Environment Variables
# ===================================
# MongoDB connection string from Atlas
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/analytics?retryWrites=true&w=majority

# Admin password for dashboard login (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ADMIN_SECRET=your-secure-random-secret-here

# URL where your dashboard is hosted (for CORS)
DASHBOARD_URL=https://your-dashboard.up.railway.app

# Port for API to listen on (Railway will override this automatically)
PORT=3000

# ===================================
# Dashboard Environment Variables
# ===================================
# Full URL to your API including protocol (http:// or https://)
# The port is included in the URL, not separate
# Examples:
#   - Local dev: http://localhost:3000 (default, no need to set)
#   - Production: https://your-api.up.railway.app
VITE_API_URL=https://your-api.up.railway.app
